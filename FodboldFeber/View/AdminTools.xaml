<Page x:Class="FodboldFeber.View.AdminTools"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FodboldFeber.View"
      Background="White"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="AdminTools" Height="600.43">
    <ScrollViewer Margin="0,0,0,0.6">
        <Grid Height="600">
            <GroupBox Header="" HorizontalAlignment="Left" Height="220" Margin="31,65,0,0" VerticalAlignment="Top" Width="644" Background="#FFB4B4B4">
            </GroupBox>
            <ComboBox x:Name="Size" HorizontalAlignment="Left" Margin="237,189,0,0" VerticalAlignment="Top" Width="120">
                <ComboBoxItem Content="Small"/>
                <ComboBoxItem Content="Medium"/>
                <ComboBoxItem Content="Large"/>
                <ComboBoxItem Content="X-Large"/>
            </ComboBox>
            <TextBox x:Name="ProductID" GotFocus="ProductName_GotFocus" LostFocus="ProductName_LostFocus" HorizontalAlignment="Left" Height="23" Margin="59,140,0,0" TextWrapping="Wrap" Text="ProduktID" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="ProductName" GotFocus="ProductName_GotFocus" LostFocus="ProductName_LostFocus" HorizontalAlignment="Left" Height="23" Margin="59,89,0,0" TextWrapping="Wrap" Text="Produkt navn" VerticalAlignment="Top" Width="120" Background="#FFF4F3F3"/>
            <TextBox x:Name="ProductDescription" GotFocus="ProductName_GotFocus" LostFocus="ProductName_LostFocus" HorizontalAlignment="Left" Height="179" Margin="422,89,0,0" TextWrapping="Wrap" Text="Produkt beskrivelse" VerticalAlignment="Top" Width="229" RenderTransformOrigin="0.406,0.396"/>
            <TextBox x:Name="ProductPrice" GotFocus="ProductName_GotFocus" LostFocus="ProductName_LostFocus" HorizontalAlignment="Left" Height="23" Margin="237,140,0,0" TextWrapping="Wrap" Text="Pris" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="AmountInStock" GotFocus="ProductName_GotFocus" LostFocus="ProductName_LostFocus" HorizontalAlignment="Left" Height="23" Margin="59,245,0,0" TextWrapping="Wrap" Text="Antal på lager" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="ShippingPrice" GotFocus="ProductName_GotFocus" LostFocus="ProductName_LostFocus" HorizontalAlignment="Left" Height="23" Margin="237,245,0,0" TextWrapping="Wrap" Text="Fragt pris" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="DiscountPrice" GotFocus="ProductName_GotFocus" LostFocus="ProductName_LostFocus" HorizontalAlignment="Left" Height="23" Margin="237,89,0,0" TextWrapping="Wrap" Text="Tilbuds pris" VerticalAlignment="Top" Width="120"/>
            <ComboBox x:Name="Category" Text="Vælg Kategori" HorizontalAlignment="Left" Margin="59,189,0,0" VerticalAlignment="Top" Width="120">
                <ComboBoxItem Content="Merchandise"/>
                <ComboBoxItem Content="Trøjer"/>
            </ComboBox>
            <Label Content="Opret vare" HorizontalAlignment="Left" Margin="237,10,0,0" VerticalAlignment="Top" FontSize="30"/>
            <Button x:Name="CreateProduct" Content="Gem" HorizontalAlignment="Left" Margin="693,149,0,0" VerticalAlignment="Top" Width="75" Click="CreateProduct_Click"/>
            <GroupBox Header="" HorizontalAlignment="Left" Margin="31,357,0,10" Width="644">
                <GroupBox.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveBorderColorKey}}"/>
                </GroupBox.Background>
            </GroupBox>
            <Button x:Name="DeleteButton" Content="Slet" HorizontalAlignment="Left" Margin="693,440,0,0" VerticalAlignment="Top" Width="75" Click="DeleteButton_Click"/>
            <Label Content="Slet vare" HorizontalAlignment="Left" Margin="264,307,0,0" VerticalAlignment="Top" FontSize="30"/>
            <ComboBox x:Name="ChooseToDelete" HorizontalAlignment="Left" Margin="422,330,0,0" VerticalAlignment="Top" Width="120" DropDownClosed="ChooseToDelete_DropDownClosed"/>
            <TextBox x:Name="txb_ProductName" HorizontalAlignment="Left" Height="23" Margin="59,426,0,0" TextWrapping="Wrap" Text="ProduktNavn" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="txb_ProductID" HorizontalAlignment="Left" Height="23" Margin="59,385,0,0" TextWrapping="Wrap" Text="ProduktID" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.566,-0.674"/>
            <TextBox x:Name="txb_Category" HorizontalAlignment="Left" Height="23" Margin="59,471,0,0" TextWrapping="Wrap" Text="Kategori" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="txb_AmountInStock" HorizontalAlignment="Left" Height="23" Margin="59,522,0,0" TextWrapping="Wrap" Text="Antal på lager" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.566,-0.674"/>
            <TextBox x:Name="txb_DiscountPrice" HorizontalAlignment="Left" Height="23" Margin="237,385,0,0" TextWrapping="Wrap" Text="Tilbuds pris" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.566,-0.674"/>
            <TextBox x:Name="txb_Price" HorizontalAlignment="Left" Height="23" Margin="237,426,0,0" TextWrapping="Wrap" Text="Pris" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.566,-0.674"/>
            <TextBox x:Name="txb_Size" HorizontalAlignment="Left" Height="23" Margin="237,471,0,0" TextWrapping="Wrap" Text="Størrelse" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.566,-0.674"/>
            <TextBox x:Name="txb_ShippingPrice" HorizontalAlignment="Left" Height="23" Margin="237,522,0,0" TextWrapping="Wrap" Text="Fragt Pris" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.566,-0.674"/>
            <TextBox x:Name="txb_ProductDescription" HorizontalAlignment="Left" Height="205" Margin="422,385,0,0" TextWrapping="Wrap" Text="Produkt beskrivelse" VerticalAlignment="Top" Width="229" RenderTransformOrigin="0.566,-0.674"/>
            <Button x:Name="UpdateButton" Content="Opdater" HorizontalAlignment="Left" Margin="693,493,0,0" VerticalAlignment="Top" Width="75"/>

        </Grid>
    </ScrollViewer>
</Page>
