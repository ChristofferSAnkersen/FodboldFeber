<Page x:Class="FodboldFeber.View.AdminTools"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FodboldFeber.View"
      Background="White"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminTools">

    <Grid>
        <Button x:Name="CreateProduct" Content="Gem" HorizontalAlignment="Left" Margin="523,125,0,0" VerticalAlignment="Top" Width="75" Click="Opret_Vare_Click"/>
        <TextBox x:Name="ProductName" GotFocus="ProductName_GotFocus" HorizontalAlignment="Left" Height="23" Margin="43,89,0,0" TextWrapping="Wrap" Text="Produkt navn" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="ProductDescription" GotFocus="ProductName_GotFocus" HorizontalAlignment="Left" Height="23" Margin="197,89,0,0" TextWrapping="Wrap" Text="Produkt beskrivelse" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="ProductPrice" GotFocus="ProductName_GotFocus" HorizontalAlignment="Left" Height="23" Margin="197,140,0,0" TextWrapping="Wrap" Text="Pris" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="AmountInStock" GotFocus="ProductName_GotFocus" HorizontalAlignment="Left" Height="23" Margin="360,89,0,0" TextWrapping="Wrap" Text="Antal på lager" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="ShippingPrice" GotFocus="ProductName_GotFocus" HorizontalAlignment="Left" Height="23" Margin="360,140,0,0" TextWrapping="Wrap" Text="Fragt pris" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="Category" HorizontalAlignment="Left" Margin="43,141,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Merchandise"/>
            <ComboBoxItem Content="Trøjer"/>
        </ComboBox>
        <Label Content="Opret vare" HorizontalAlignment="Left" Margin="120,10,0,0" VerticalAlignment="Top" FontSize="30"/>

    </Grid>
</Page>
