<Window x:Class="FodboldFeber.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FodboldFeber"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="{Binding SystemParameters.WorkArea.Height}" 
        Width="1300" 
        WindowState="Maximized"
        WindowStyle="ToolWindow">

    <Grid Margin="0,0,-0.667,0" Height="526" VerticalAlignment="Top">
        <Rectangle HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="1294">
            <Rectangle.Effect>
                <DropShadowEffect ShadowDepth="1" Opacity="0.5"/>
            </Rectangle.Effect>
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FFFFB900" Offset="0.998"/>
                    <GradientStop Color="#FFFFE90B"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Button x:Name="Frontpage" Content="Forside" HorizontalAlignment="Left" Margin="45,10,0,0" VerticalAlignment="Top" Width="75" Foreground="White" Background="{x:Null}" BorderThickness="0" FontWeight="Bold" Click="btnFrontpage_Click" BorderBrush="{x:Null}" FontSize="14"/>
        <Button x:Name="News" Content="Nyheder" HorizontalAlignment="Left" Margin="154,10,0,0" VerticalAlignment="Top" Width="75" Foreground="White" Background="{x:Null}" BorderThickness="0" FontWeight="Bold" Click="btnNews_Click" BorderBrush="{x:Null}" FontSize="14"/>
        <Button x:Name="Shop" Content="Shop" HorizontalAlignment="Left" Margin="263,10,0,0" VerticalAlignment="Top" Width="75" Foreground="White" Background="{x:Null}" BorderThickness="0" FontWeight="Bold" Click="btnShop_Click" BorderBrush="{x:Null}" FontSize="14"/>
        <Button x:Name="Contact" Content="Kontakt" HorizontalAlignment="Left" Margin="915,10,0,0" VerticalAlignment="Top" Width="75" Foreground="White" Background="{x:Null}" BorderThickness="0" FontWeight="Bold" Click="btnContact_Click" BorderBrush="{x:Null}" FontSize="14"/>
        <Button x:Name="About" Content="Om os" HorizontalAlignment="Left" Margin="995,10,0,0" VerticalAlignment="Top" Width="75" Foreground="White" Background="{x:Null}" BorderThickness="0" FontWeight="Bold" Click="btnAbout_Click" BorderBrush="{x:Null}" FontSize="14"/>
        <Button x:Name="Customers" Content="Kunder" HorizontalAlignment="Left" Margin="1082,10,0,0" VerticalAlignment="Top" Width="75" Foreground="White" Background="{x:Null}" BorderThickness="0" FontWeight="Bold" Click="btnCustomers_Click" BorderBrush="{x:Null}" FontSize="14"/>
        <Button x:Name="Login" Content="Login" HorizontalAlignment="Left" Margin="1157,10,0,0" VerticalAlignment="Top" Width="75" Foreground="White" Background="{x:Null}" BorderThickness="0" FontWeight="Bold" Click="btnLogin_Click" BorderBrush="{x:Null}" FontSize="14"/>
        <Frame x:Name="StartPage" Margin="0,40,0,-147" NavigationUIVisibility="Hidden" Content=""/>
        <Button x:Name="btnDiscord" HorizontalAlignment="Left"  Margin="855,0,0,0" Background="{x:Null}" BorderBrush="{x:Null}" VerticalAlignment="Top" Width="40" Height="36" Click="btnDiscord_Click" Foreground="{x:Null}">
            <Image Source="https://i.mcpro.games/Discord/discord_canary.png"></Image>
        </Button>
    </Grid>
</Window>
 