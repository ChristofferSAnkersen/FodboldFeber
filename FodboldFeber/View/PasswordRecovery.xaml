<Page x:Class="FodboldFeber.View.PasswordRecovery"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FodboldFeber.View"
      xmlns:ViewModel="clr-namespace:FodboldFeber.ViewModel" 
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="600" d:DesignWidth="800"
      Title="PasswordRecovery">

    <Grid>

        <Image Source="http://www.ianbarnard.co.uk/wp-content/uploads/2013/09/free-blurred-web-backgrounds-06.jpg" HorizontalAlignment="Left" Height="600" VerticalAlignment="Top" Width="800"/>
        <Rectangle HorizontalAlignment="Left" Height="315" Margin="200,140,0,0" VerticalAlignment="Top" Width="349" Fill="White" Opacity="0.2"/>

        <TextBox  x:Name="txtUserName" TextWrapping="Wrap" Margin="234,241,290,324" FontSize="36"/>
        <TextBox x:Name="txtEmail" TextWrapping="Wrap" Margin="234,330,290,240" FontSize="36"/>
        <Label x:Name="lblUserName"  Content="Indtast Brugernavn" HorizontalAlignment="Left" Margin="230,196,0,0" VerticalAlignment="Top" Height="40" Width="319" FontSize="18" FontFamily="Segoe UI Light"/>
        <Label x:Name="LblEmail" HorizontalAlignment="Left" Margin="228,286,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.1,3" Height="34" Width="241" Content="Indtast Email" FontSize="18" FontFamily="Segoe UI Light"/>
        <Button x:Name="btnForgotUserName" Content="Glemt brugernavn" HorizontalAlignment="Left" Margin="242,400,0,0" VerticalAlignment="Top" Width="262" Height="30" FontSize="18" Click="BtnForgotUserNameClick"/>
        <Label Content="Glemt kodeord" HorizontalAlignment="Left" Margin="326,151,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Segoe UI Light" Background="{x:Null}" Foreground="White"/>
        <!--<Button x:Name="btnSendEmail" Content="Nulstil dit kodeord" HorizontalAlignment="Left" Margin="392,350,0,0" VerticalAlignment="Top" Width="268" Height="70" FontSize="18" Click="BtnSendEmailClick"/>-->

    </Grid>
</Page>
